<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/product_iv"
        android:layout_width="74dp"
        android:layout_height="68dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/product_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stylish Modern Dining Tables"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/medium"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/product_iv"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/product_store_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aron Table Center"
        android:textColor="@color/black"
        android:fontFamily="@font/book"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/product_iv"
        app:layout_constraintTop_toBottomOf="@id/product_title_tv"/>

    <TextView
        android:id="@+id/product_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 27,390"
        android:textColor="@color/red_light"
        android:fontFamily="@font/medium"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/product_iv"
        app:layout_constraintTop_toBottomOf="@id/product_store_tv"/>


</androidx.constraintlayout.widget.ConstraintLayout>